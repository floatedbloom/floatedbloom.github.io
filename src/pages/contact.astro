---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const pageTitle = "Contact";
---

<Layout title="Contact â€¢ George">
	<main>
		<head>
            <meta name="viewport" content="initial-scale=1, width=device-width">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
            <title>{pageTitle}</title>
			<style>
				.email-button {
					display: inline-block;
					text-decoration: none;
					background-color: #2c3e50; /* Background color */
					color: #ffffff; /* Text color */
					padding: 12px 20px; /* Padding for button */
					border-radius: 5px; /* Rounded corners */
					transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
					/* Centering content */
					display: flex;
					justify-content: center;
					align-items: center;
					flex-direction: column;
				}

				.email-button:hover {
					background-color: #1abc9c; /* Hover background color */
					color: #ffffff; /* Hover text color */
				}

				.email-button .icon {
					margin-bottom: 10px; /* Space between icon and text */
				}

				.email-button .text {
					font-size: 3.5em; /* Text size */
				}

				/* Font Awesome icon styles */
				.email-button .icon i {
					font-size: 3.7em; /* Icon size */
				}
				.github-button {
					display: inline-block;
					text-decoration: none;
					background-color: #2c3e50; /* Background color for GitHub */
					color: #ffffff; /* Text color */
					padding: 12px 20px; /* Padding for button */
					border-radius: 5px; /* Rounded corners */
					transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
					/* Centering content */
					display: flex;
					flex-direction: column; /* Stack items vertically */
					justify-content: center;
					align-items: center;
					margin-top: 20px; /* Space between buttons */
				}

				.github-button:hover {
					background-color: #1abc9c; /* Hover background color for GitHub */
					color: #ffffff; /* Hover text color */
				}

				.github-button .icon {
					margin-bottom: 10px; /* Space between icon and text */
				}

				.github-button .text {
					font-size: 3.5em; /* Adjusted text size */
				}

				/* Font Awesome icon styles */
				.github-button .icon i {
					font-size: 3.7em; /* Adjusted icon size */
				}
			</style>
        </head>
        <body>
			<h1><span class="text-gradient central">{pageTitle}</span></h1>
			<a class="homepage-button" role="link" href="/">Homepage</a>
			<div class="fullscreen-conatiner">
				<div class="text-center mt-5">
					<a href="mailto:georgelapin23@gmail.com" class="email-button">
						<span class="icon"><i class="fas fa-envelope"></i></span>
						<span class="text">Email</span>
					</a>
					<a href="https://github.com/floatedbloom" class="github-button">
						<span class="icon"><i class="fab fa-github"></i></span>
						<span class="text">Github</span>
					</a>
				</div>
			</div>
        </body>
	</main>
</Layout>
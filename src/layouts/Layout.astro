---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="zhe.ico" />
		<link rel="icon" href="/zhe.ico" type="image/png">
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #1a2a6c;
		background-size: 224px;
	}	
	body {
		background: linear-gradient(135deg, #1a2a6c, #16222a); /* Dark blue to black gradient */
		background-size: 400% 400%; /* For animation */
		animation: gradientBG 15s ease infinite; /* Animation effect */
		color: #E0E0E0; /* Light text color */
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		margin: 0;
		font-family: 'Roboto Slab', serif;
		text-align: center; /* Center text */
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.central {
  		display: flex;
  		justify-content: center; /* Centers horizontally */
	}
	.content-container {
		transition: filter 0.3s;
	}
	.close {
		color: #aaa;
		float: right;
		font-size: 28px;
		font-weight: bold;
	}
	.close:hover,
	.close:focus {
		color: rgb(255, 255, 255);
		text-decoration: none;
		cursor: pointer;
	}
	
	:root {
            --accent-gradient: linear-gradient(135deg, #ff9a9e, #fad0c4, #fad0c4, #f3e1e1);
        }
        
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 200%;
		font-size: 2em; /* Adjust font size as needed */
		font-weight: bold; /* Adjust font weight as needed */
		line-height: 1.2;
		padding-bottom: 0.2em;
		animation: shimmer 2s linear infinite;
	}

	@keyframes shimmer {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}
	.list-group {
		display: flex;
		flex-direction: column;
		align-items: center;
		list-style-type: none;
		padding: 0;
		margin: 20px 0;
		border: 1px solid #ddd;
		border-radius: 5px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	.list-group-item {
	display: block;
		width: 100% !important;
		padding: 15px !important;
		margin: 0 !important;
		text-decoration: none !important;
		color: #FFFFF !important;
		background-color: #333333 !important;
		border-bottom: 1px solid #ddd !important;
		transition: background-color 0.3s, color 0.3s !important;
	}

	.list-group-item:last-child {
		border-bottom: none;
	}

	.list-group-item-action:hover, 
		.list-group-item-action:focus {
		background-color: #f0f0f0;
	}

	.list-group-item.active {
		background-color: #007bff;
		color: #fff;
		font-weight: bold;
		border-color: #007bff;
	}

	.list-group-item.active:hover, 
	.list-group-item.active:focus {
		background-color: #0056b3;
	}
	.box-thing {
		border: 2px solid #000; /* Border around the text */
		padding: 20px; /* Padding inside the box */
		border-radius: 10px; /* Rounded corners */
		background: linear-gradient(135deg, #f3f3f3, #e7e7e7); /* Background gradient */
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Box shadow for a subtle 3D effect */
		font-family: Arial, sans-serif; /* Font styling */
		margin: 20px auto; /* Center the box and add margin */
		width: 80%; /* Set the width of the box */
		max-width: 600px; /* Maximum width of the box */
		text-align: justify; /* Justify the text */
	}


	@keyframes gradientBG {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}

	a {
		font-family: 'Lato', sans-serif;
		color: rgb(237, 206, 241); /* Default link color */
		text-decoration: none; /* Remove underline */
		transition: color 0.3s ease; /* Smooth color transition */
	}

	a:hover {
		color: #d368ca; /* Hover color */
	}

	a:visited {
		color: rgb(237, 206, 241); /* Visited link color */
	}

	a:focus,
	a:active {
		outline: none; /* Remove outline on focus and active states */
	}

	/* Example: Underline on hover */
	a.underline-on-hover:hover {
		text-decoration: underline;
	}

	/* Example: Button style */
	a.button {
		display: inline-block;
		padding: 10px 20px;
		background-color: #007bff;
		color: #fff;
		text-decoration: none;
		border-radius: 4px;
		transition: background-color 0.3s ease;
	}

	a.button:hover {
		background-color: #0056b3;
	}
	.black {
		color:#000
	}
    .list {
      text-align: center; /* Center the list items */
      list-style-type: none; /* Remove default bullet points */
      padding: 0;
    }

    .list li{
      margin-bottom: 10px; /* Add some spacing between list items */
    }

    .list a {
      text-decoration: none; /* Remove underline from links */
      color: #634d31; /* Link color */
      transition: color 0.3s ease; /* Smooth color transition on hover */
    }

    .list a:hover {
      color: #2e2616; /* Darker color on hover */
    }
	.home-button {
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 1000;
	}
	.homepage-button {
		padding: 10px 20px;
		background-color: rgb(60, 179, 113);
		color: #fff;
		border: none;
		border-radius: 5px;
		font-size: 1rem;
		text-decoration: none;
		transition: background-color 0.3s ease;
	}
	.homepage-button:hover {
		background-color: rgb(46, 139, 87);
	}
	h1 {
		line-height: 1.2; /* Adjust to ensure enough space for descenders */
		padding-bottom: 0.2em;
		font-size: 5em; /* Add padding to avoid cut off */
	}
	.text-center {
		text-align: center;
	}
	.fullscreen-container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		width: 100%;
	}
	.btn-custom {
		font-size: 1.25rem; /* Adjust size as needed */
		padding: 1rem 2rem; /* Adjust padding as needed */
		margin: 0.5rem; /* Adjust margin for spacing between buttons */
	}
	.wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		flex-direction: column; /* Stack buttons vertically */
		align-items: center; /* Center items horizontally */
		gap: 20px; /* Space between buttons */
	}
	.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.central {
			width: 90%;
		}
	}
</style>
